@model object

@{
    ViewBag.Title = "Report submitted";
    Layout = "_Layout";
    ViewBag.GaData.Vpv = "/public-sector-reporting/report/page-submit-confirmation";
    ViewBag.ZenDeskLabel = "reporting-report-submitted";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-box-highlight">
            <h1 class="govuk-heading-xl">Report submitted</h1>
            <p class="font-medium">
                for the period <br>
                               <strong class="bold">@ViewBag.CurrentPeriod.FullString</strong>
