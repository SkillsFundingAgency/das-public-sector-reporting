@model SFA.DAS.PSRService.Web.ViewModels.ReportListViewModel

@{
    ViewBag.Title = "Submitted reports";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a class="link-back" asp-controller="Home" asp-action="Index">Back</a>
        <h1 class="heading-xlarge">Submitted reports</h1>
    </div>


    @if (Model.SubmittedReports.Count() > 0)
    {
    <div class="column-two-thirds">
        <p>Choose the report you wish to view</p>
    </div>
    <div class="column-full" data-automated-test-id="submitted-report-list">
        <table>
            <thead>
                <tr>
                <th scope="col">Organisation name</th>
                <th scope="col">Reporting period</th>
                <th class="numeric" scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var result in Model.SubmittedReports)
            {
                <tr data-automated-test-id="submitted-report-item">
                    <th scope="row">@result.OrganisationName</th>
                    <td>@Model.Periods[result.ReportingPeriod].FullString</td>
                    <td class="link-right"><a href="../Report/Summary/@result.ReportingPeriod">View</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    }

    @if (Model.SubmittedReports.Count() == 0)
    {
    <div class="column-two-thirds" data-automated-test-id="submitted-report-list-display-message">
        <p>There are currently no submitted reports to show</p>
    </div>
    }
</div>