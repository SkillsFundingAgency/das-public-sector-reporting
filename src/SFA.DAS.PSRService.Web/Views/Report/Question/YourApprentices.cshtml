@model SFA.DAS.PSRService.Domain.Entities.Section

@{
    var questionList = Model.Questions.ToDictionary(k => k.Id);
    var canBeEdited = ViewBag.CanBeEdited;
}

<div class="form-group">
    <table>
        <caption class="heading-small">Number of apprentices who work in England</caption>
        <tbody>
            <tr>
                <td>Number of apprentices who were working in England on 31 March @ViewBag.CurrentPeriod.StartYear</td>
                <td class="numeric bold-xsmall">@questionList["atStart"].Answer</td>
                <td class="link-right">
                    @if (canBeEdited)
                    {
                        <a href="../Question/@Model.Id">Change</a>
                    }
                </td>
            </tr>
            <tr>
                <td>Number of apprentices who were working in England on 31 March @ViewBag.CurrentPeriod.EndYear</td>
                <td class="numeric bold-xsmall">@questionList["atEnd"].Answer</td>
                <td class="link-right">
                    @if (canBeEdited)
                    {
                        <a href="../Question/@Model.Id">Change</a>
                    }
                </td>
            </tr>
            <tr>
                <td>Number of new apprentices in England between @ViewBag.CurrentPeriod.FullString (includes both new hires and existing employees who started an apprenticeship)</td>
                <td class="numeric bold-xsmall">@questionList["newThisPeriod"].Answer</td>
                <td class="link-right">
                    @if (canBeEdited)
                    {
                        <a href="../Question/@Model.Id">Change</a>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>

