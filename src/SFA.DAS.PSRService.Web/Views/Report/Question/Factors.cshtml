@model SFA.DAS.PSRService.Domain.Entities.Section

@{
    var questionList = Model.SubSections.SelectMany(w => w.Questions).ToDictionary(k => k.Id);
    var canBeEdited = ViewBag.CanBeEdited;
    ViewBag.GaData.Vpv = "report/question/page-factors";
}

<div class="form-group">
    <table class="essay-questions">
        <caption class="heading-medium">Factors that impacted your ability to meet the target</caption>
        <tbody>
            <tr>
                <td>What actions have you taken this year to meet the target? How do these compare to the actions taken in the previous year?</td>
                <td class="bold">@questionList["OutlineActions"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@questionList["OutlineActions"].Id">Change</a>
                    </td>
                    }
            </tr>
            <tr>
                <td>What challenges have you faced this year in your efforts to meet the target? How do these compare to the challenges experienced in the previous year?</td>
                <td class="bold">@questionList["Challenges"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@questionList["Challenges"].Id">Change</a>
                    </td>
                    }
            </tr>
            <tr>
                <td>How are you planning to meet the target in future? What will you continue to do or do differently?</td>
                <td class="bold">@questionList["TargetPlans"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@questionList["TargetPlans"].Id">Change</a>
                    </td>
                    }
            </tr>
            <tr>
                <td>Do you have anything else you want to tell us? (optional)</td>
                <td class="bold">@questionList["AnythingElse"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@questionList["AnythingElse"].Id">Change</a>
                    </td>
                    }
            </tr>
        </tbody>
    </table>
</div>