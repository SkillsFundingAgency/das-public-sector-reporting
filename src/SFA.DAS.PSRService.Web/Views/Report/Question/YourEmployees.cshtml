@model SFA.DAS.PSRService.Domain.Entities.Section

@{
    ViewBag.GaData.Vpv = "/public-sector-reporting/report/question/page-your-employees";
    var questionList = Model.Questions.ToDictionary(k => k.Id);
    var canBeEdited = ViewBag.CanBeEdited;
}

<div class="form-group">
    <table>
        <caption class="heading-medium">Number of employees who work in England</caption>
        <tbody>
            <tr>
                <td>Number of employees who were working in England on 31 March @ViewBag.CurrentPeriod.StartYear.AsFourDigitString</td>
                <td id="your-employees-at-start" class="numeric bold js-addcommas">@questionList["atStart"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@Model.Id">Change</a>
                    </td>
                    }
            </tr>
            <tr>
                <td>Number of employees who were working in England on 31 March @ViewBag.CurrentPeriod.EndYear.AsFourDigitString</td>
                <td class="numeric bold js-addcommas">@questionList["atEnd"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@Model.Id">Change</a>
                    </td>
                    }
            </tr>
            <tr>
                <td>Number of new employees who started working for you in England between @ViewBag.CurrentPeriod.FullString</td>
                <td class="numeric bold js-addcommas">@questionList["newThisPeriod"].Answer</td>
                    @if (canBeEdited)
                    {
                    <td class="link-right">
                        <a asp-controller="Question" asp-action="Index" asp-route-id="@Model.Id">Change</a>
                    </td>
                    }
            </tr>
        </tbody>
    </table>
</div>