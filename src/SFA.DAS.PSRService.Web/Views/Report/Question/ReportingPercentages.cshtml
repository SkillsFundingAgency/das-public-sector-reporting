@model SFA.DAS.PSRService.Web.ViewModels.ReportingPercentages

<div class="form-group">
    <table>
        <caption class="heading-small">Reporting percentages</caption>
        <p>We have computed the percentages that will be reported from the figures you have given</p>
        <tbody>
        <tr>
            <td>Percentage of apprenticeship starts as a proportion of employment starts between @ViewBag.CurrentPeriod.FullString</td>
            <td class="numeric bold-xsmall">@Model.EmploymentStarts.ToString("0.00")%</td>
            <td class="link-right"></td>
        </tr>
        <tr>
            <td>Percentage of total headcount that were apprentices on 31 March @ViewBag.CurrentPeriod.EndYear</td>
            <td class="numeric bold-xsmall">@Model.TotalHeadCount.ToString("0.00")%</td>
            <td class="link-right"></td>
        </tr>
        <tr>
            @* 31 March 2017 has been hardcoded until refactor *@
            <td>Percentage of apprenticeship starts between @ViewBag.CurrentPeriod.FullString as a proportion of total headcount on 31 March 2017</td>
            <td class="numeric bold-xsmall">@Model.NewThisPeriod.ToString("0.00")%</td>
            <td class="link-right"></td>
        </tr>
        </tbody>
    </table>
</div>