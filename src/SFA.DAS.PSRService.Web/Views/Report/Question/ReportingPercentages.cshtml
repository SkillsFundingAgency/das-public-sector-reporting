@model SFA.DAS.PSRService.Web.ViewModels.PercentagesViewModel

<div class="form-group">
    <table>
        <caption class="heading-small">Reporting percentages</caption>
        <p>We have computed the percentages that will be reported from the figures you have given</p>
        <tbody>
        <tr>
            <td>Percentage of employment starts that were apprenticeships between @ViewBag.CurrentPeriod.FullString</td>
            <td class="numeric bold-xsmall">@Model.EmploymentStarts</td>
        </tr>
        <tr>
            <td>Percentage of total headcount that were apprenticeships on 31 March @ViewBag.CurrentPeriod.EndYear</td>
            <td class="numeric bold-xsmall">@Model.TotalHeadCount</td>
        </tr>
        <tr>
            <td>Percentage of total headcount who were apprenticeship starts between @ViewBag.CurrentPeriod.FullString (The target)</td>
            <td class="numeric bold-xsmall">@Model.NewThisPeriod</td>
        </tr>
        </tbody>
    </table>
</div>