@model SFA.DAS.PSRService.Web.ViewModels.ReportViewModel
@{
    ViewBag.GaData.Vpv = "/public-sector-reporting/report/sections/page-organisation-name";
}

<li>
    <h2 class="task-list-section">
        <span class="task-list-section-number">1. </span> Organisation name
    </h2>

    <ul class="task-list-items">
        <li class="task-list-item">
            @*<a class="task-name" href="#" aria-describedby="organisation-name-completed">
            Your organisation’s name
            </a>*@
            <a class="task-name" asp-controller="Report" asp-action="OrganisationName" aria-describedby="organisation-name-completed">Your organisation's name</a>
            @if (!string.IsNullOrWhiteSpace(Model.Report.OrganisationName))
            {
                <span id="OrganisationName-task-completed" class="govuk-tag">Complete</span>
            }
        </li>
        @if (Model.Report.IsLocalAuthority.HasValue)
        {
            <li class="task-list-item">
                <a class="task-name" asp-controller="Report" asp-action="TotalEmployees" aria-describedby="organisation-name-completed">Total number of employees</a>
                @if (Model.Report.HasMinimumEmployeeHeadcount.HasValue)
                {
                    <span id="TotalEmployees-task-completed" class="govuk-tag">Complete</span>
                }
            </li>
        }
    </ul>
</li>
