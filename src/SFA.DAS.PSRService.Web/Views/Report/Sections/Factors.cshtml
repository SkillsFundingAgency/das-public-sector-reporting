@model SFA.DAS.PSRService.Domain.Entities.Section

@{
    ViewData["Title"] = "Public sector reporting";
    ViewBag.GaData.Vpv = "/public-sector-reporting/report/sections/page-factors";
}

<li>
    <h2 class="task-list-section">
        <span class="task-list-section-number">3. </span> @Model.Title
    </h2>
    <ul class="task-list-items">
        @if (Model.SubSections != null)
        {
            foreach (var subSection in Model.SubSections)
            {
                <li class="task-list-item">
                    <a class="task-name" 
                    asp-controller="Question" 
                    asp-action="Index" 
                    asp-route-id="@subSection.Id" 
                    asp-route-hashedEmployerAccountId="@ViewData[RouteValues.HashedEmployerAccountId]" aria-describedby="@($"{subSection.Id}-complete")">@subSection.SummaryText</a>
                    @if (subSection.IsComplete())
                    {
                        <span id="@($"{subSection.Id}-task-completed")" class="task-completed">COMPLETE</span>
                    }
                </li>   
            }
        }
    </ul>
</li>
